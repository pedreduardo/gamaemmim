<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<%= form_with(model: Lead.new, remote: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :lead_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :lead_email %>
  </div>

  <div class="field">
    <%= form.label :ip %>
    <%= form.text_field :ip, id: :lead_ip %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
