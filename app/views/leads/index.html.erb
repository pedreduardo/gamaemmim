<div  style="background-color:white">
  <div class="pull-right" style="padding: 10px;">
    <%= link_to "Sair", destroy_admin_session_path,  method: :delete, class: "btn btn-danger" %>
  </div>
  <h1>Contagem de Leads: <%= @leads.size %></h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Ip</th>
        <th>Criado em</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <td><%= lead.name %></td>
          <td><%= lead.email %></td>
          <td><%= lead.ip %></td>
          <td><%= lead.created_at %></td>
          <td><%= link_to 'Edit', edit_lead_path(lead) %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
